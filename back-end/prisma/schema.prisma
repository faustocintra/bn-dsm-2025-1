generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("mongodb://127.0.0.1:27017/loja?directConnection=true")
}

model Categoria {   // Nomes de model com Inicial Mai√∫scula e no singular
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  descricao   String
}